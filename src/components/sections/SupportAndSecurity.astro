        {
          [...logos, ...logos, ...logos].map((logo) => (
            <div class="mx-12 flex items-center justify-center min-w-[120px]">
              <img
                src={logo.url}
                alt={logo.name}
                class="h-8 md:h-10 opacity-40 hover:opacity-100 transition-opacity duration-300 object-contain"
              />
            </div>
          ))
        }
